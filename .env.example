# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=4000

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017
DB_NAME=uns_simulator

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Client Configuration
CLIENT_URL=http://localhost:3000

# MQTT Configuration (for reference - broker runs in Docker)
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_WS_PORT=9001

# MQTT Backbone Credentials (system users for ACL-protected topics)
MQTT_BACKBONE_USERNAME=uns-backend
MQTT_BACKBONE_PASSWORD=uns-backend-dev
MQTT_SIM_USERNAME=uns-sim
MQTT_SIM_PASSWORD=uns-sim-dev
MQTT_CLIENT_USERNAME=uns-client
MQTT_CLIENT_PASSWORD=uns-client-dev

# Rate Limiting (optional)
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Docker-specific (for client build)
VITE_API_URL=http://localhost:4000
